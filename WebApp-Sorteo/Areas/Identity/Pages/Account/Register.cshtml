@page
@using WebApp_Sorteo.Models.Helpers
@model RegisterModel
@{
    ViewData["Title"] = "Registro de Usuarios";
}
<style>
    .bg-glass {
        background-color: hsla(0, 0%, 100%, 0.9) !important;
        backdrop-filter: saturate(200%) blur(25px);
    }
</style>
<div class="container container-fluid">
    <div class="card bg-glass shadow-lg border-5">
        <div class="card-header">
            <h1 class="card-title text-success text-center">@ViewData["Title"]</h1>
        </div>
        <div class="card-body px-4 py-5 px-md-5">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            <label asp-for="Input.Nombres" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="Input.Nombres" class="form-control" autocomplete="username" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Nombres" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            <label asp-for="Input.Apellidos" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="Input.Apellidos" class="form-control" autocomplete="username" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            <label asp-for="Input.Documento" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                <input asp-for="Input.Documento" class="form-control" autocomplete="username" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Documento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            <label asp-for="Input.Direccion" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                <input asp-for="Input.Direccion" class="form-control" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Direccion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            <label asp-for="Input.Pais" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-globe"></i></span>
                                <input asp-for="Input.Pais" class="form-control" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Pais" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            <label asp-for="Input.Ciudad" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-city"></i></span>
                                <input asp-for="Input.Ciudad" class="form-control" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Ciudad" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            <label asp-for="Input.PhoneNumber" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    @if (User.IsInRole(Roles.Role_Admin))
                    {
                        <div class="col-md-6 mb-4">
                            <div class="form-outline">
                                <label asp-for="Input.Role" class="form-label">Rol</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                    <select class="form-select form-select-lg" asp-for="Input.Role" asp-items="@Model.Input.ListaRol">
                                        <option value="">Seleccionar un rol</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    }
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
