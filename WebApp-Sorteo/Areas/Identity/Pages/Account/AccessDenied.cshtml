@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Acceso Denegado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS v5.3.2 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />

    <title>@ViewData["Title"]</title>
    <style>
        .container {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

        .container {
            text-align: center;
            margin-top: 5px;
        }

        h1 {
            color: #FF5733;
        }

        p {
            color: #555;
        }

        .lock-icon {
            font-size: 50px;
            color: #FF5733;
        }

        img {
            width: 30%;
            height: 50%;
        }

        .image {
            border-radius: 5px;
            align-content: center;
        }

        button {
            margin: 5px;
            color: red;
            background-color: darkorange;
            width: auto;
            height: 30px;
        }

        a:hover {
            color: blue;
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        }

        a {
            text-decoration: none;
            color: whitesmoke
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="card border-success">
            <div class="card-header">
                <h1 class="text-danger text-center">@ViewData["Title"]</h1>
                <h3 class="text-center">
                    <i class="fas fa-user-lock"></i>
                </h3>
            </div>
            <div class="card-body">
                <i class="lock-icon">🔒</i>
                <h2 class="card-title">Error, no tienes permisos para ver el contenido.</h2>
                <p>Debes tener los permisos necesarios para acceder a este recurso.</p>
                <div class="image">
                    <img src="~/images/lock.jpg" class="img-fluid rounded-top" alt="Imagen de bloqueo" />
                </div>
            </div>
        </div>

    </div>
</body>
<script>
    window.addEventListener("load", function () {
        const container = document.querySelector(".container");
        if (container) {
            const message = document.createElement("span");
            container.appendChild(message);
            const errorClass = [
                "text-center",
                "text-white",
                "text-bold",
                "alert", "alert-danger"
            ];
            message.classList.add(...errorClass)
            message.textContent = "Estamos redirigiendo a la pagina principal!";
        }
        setTimeout(() => {
            window.location.href = '@Url.Action("Index", "Home")';
        }, 3500)
    })
</script>

</html>