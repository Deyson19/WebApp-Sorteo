@model WebApp_Sorteo.Models.Premio

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center text-primary">Detalles del Premio</h1>

<div class="container mt-4">
    <h4 class="text-center">Premio</h4>
    <hr />
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Valor)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Valor)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Imagen)
                </dt>
                <dd class="col-sm-9">
                    <!-- Ajustando el tamaño de la imagen -->
                    <img src="@Html.DisplayFor(model => model.Imagen)" alt="Imagen del premio" class="img-fluid rounded"
                        style="max-width: 50%; height: auto;" />
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>