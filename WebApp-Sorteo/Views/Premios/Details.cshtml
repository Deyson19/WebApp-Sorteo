@model WebApp_Sorteo.Models.Premio

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center text-primary">Detalles del Premio</h1>

<div class="container mt-4">
    <hr />
    <div class="card shadow-lg border-2 border-warning">
        <div class="card-body">
            <div class="row">
                <div class="col-4 ">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Valor)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Valor)
                    </dd>
                </div>
                <section class="col-8 ">
                    <img src="@Html.DisplayFor(model => model.Imagen)" alt="Imagen del premio" class="img-fluid rounded"
                        style="max-width: 50%; height: auto;" />
                </section>
            </div>
        </div>

        <div class="card-footer text-muted d-flex justify-content-evenly">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="fas fa-pencil"></i>
                Editar
            </a>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                Volver a la lista
            </a>
        </div>
    </div>
</div>