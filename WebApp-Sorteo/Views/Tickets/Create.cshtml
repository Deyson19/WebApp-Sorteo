@model WebApp_Sorteo.Models.Ticket

@{
    ViewData["Title"] = "Crear un Ticket";
}

<h1 class="text-center text-primary">Crear un Ticket</h1>

<h4 class="text-info">Agregar detalles del ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroTicket" class="control-label"></label>
                <input asp-for="NumeroTicket" class="form-control" />
                <span asp-validation-for="NumeroTicket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCompra" class="control-label"></label>
                <input asp-for="FechaCompra" class="form-control" />
                <span asp-validation-for="FechaCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoPago" class="control-label"></label>
                <select asp-for="EstadoPago" class="form-control"></select>
                <span asp-validation-for="EstadoPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoPagado" class="control-label"></label>
                <input asp-for="MontoPagado" class="form-control" />
                <span asp-validation-for="MontoPagado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SorteoId" class="control-label"></label>
                <select asp-for="SorteoId" class="form-control" asp-items="ViewBag.SorteoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" id="btnRegresar">
        <i class="fas fa-arrow-left"></i> Regresar a la lista
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        const btnRegresar = document.getElementById("btnRegresar");
        btnRegresar.addEventListener("click", function () {
            Swal.fire({
                title: "¿Desea regresar a la lista de tickets?",
                text: "Al hacer clic en 'Aceptar', se cerrará la ventana actual y se regresa al listado",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si',
                cancelButtonText: 'No, cancelar',
            }).then((x) => {
                if (x.isConfirmed) {
                    window.location.href = '@Url.Action("Index", "Tickets")';
                } else {
                    console.log("No se regresará");
                }
            })
        })
    </script>
}
